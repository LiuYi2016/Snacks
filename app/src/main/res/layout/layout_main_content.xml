<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff8f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">


        <RadioButton
            android:id="@+id/rb_main_home"
            android:drawableTop="@drawable/icon_home_new_selector"
            android:text="首页"
            style="@style/MainBottomStyle"/>

        <RadioButton
            android:id="@+id/rb_main_sale"
            style="@style/MainBottomStyle"
            android:drawableTop="@drawable/icon_sale_new_selector"
            android:text="热卖" />

        <RadioButton
            android:id="@+id/rb_main_subject"
            style="@style/MainBottomStyle"
            android:drawableTop="@drawable/icon_subject_new_selector"
            android:text="专题"/>

        <RadioButton
            android:id="@+id/rb_main_mine"
            android:drawableTop="@drawable/icon_mine_new_selector"
            style="@style/MainBottomStyle"
            android:text="我的小喵"/>
    </RadioGroup>

</LinearLayout>