<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_guide_bottom"
        android:layout_width="@dimen/guide_page_width"
        android:layout_height="@dimen/guide_page_height"
        android:paddingLeft="18.0dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_guide_point"
        android:gravity="center_vertical"
        android:layout_marginBottom="25dip">
        <LinearLayout
            android:id="@+id/ll_guide_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
        <ImageView
            android:id="@+id/iv_guide_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_point"/>
    </RelativeLayout>

</RelativeLayout>
