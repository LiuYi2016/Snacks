<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MainBottomStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#fff8f8f8</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawablePadding">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/home_button_text_color_selector</item>
    </style>
</resources>
